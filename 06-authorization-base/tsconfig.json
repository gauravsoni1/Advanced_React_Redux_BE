{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES2015",
      "ES2015.core",
      "ES2017",
      "ES2020",
      "ScriptHost",
      "DOM.Iterable",
      "ES6",
      "ES2019",
      "ES2018"
    ],
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/"
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "include": [
    "src"
  ],
}